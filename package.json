    "electron": "^9.0.0",
    "electron-builder": "^24.4.0",
    "nodemon": "^2.0.0"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build" : {
    "appId": "com.vincentpt.readit",
    "copyright": "Copyright VincentPT",
    "mac": {
      "category": "public.app-category.utilities",
